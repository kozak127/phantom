                <fieldset class="buttons">
                     <g:link class="edit" controller="options" action="setNormalPerspective"><g:message code="view.button.options.perspective.normal" default="Set Normal Perspective" /></g:link>
                    
                    <g:link class="edit" controller="options" action="setOrganizerPerspective"><g:message code="view.button.options.perspective.normal" default="Set Organizer Perspective" /></g:link>
                    
                </fieldset>
            </g:form>
    	</div>
    </body>
</html>